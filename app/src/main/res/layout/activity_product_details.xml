<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityProductDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="429dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgProductThumb"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:src="@drawable/ic_iconmonstr_shopping_bag"
                />
            <TextView
                android:id="@+id/txtProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Title"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@+id/imgProductThumb"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:maxLines="2"
                />
            <TextView
                android:id="@+id/txtProductPrice"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_below="@+id/txtProductTitle"
                android:text="Rp.999999"
                android:textSize="20dp"
                android:textColor="@color/red_light" />
            <ImageView
                android:id="@+id/imgProductRateStar"
                android:layout_width="96dp"
                android:layout_height="24dp"
                android:src="@drawable/stars_4_5"
                android:layout_below="@+id/txtProductPrice"
                android:layout_marginVertical="0dp"
                android:layout_marginHorizontal="10dp"
                />


            <TextView
                android:id="@+id/txtProductRate"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:text="4.9"
                android:layout_toRightOf="@+id/imgProductRateStar"
                android:layout_below="@+id/txtProductPrice"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/divider1"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:background="@color/gray_light"
                android:layout_marginHorizontal="10dp"
                android:layout_toRightOf="@+id/txtProductRate"
                android:layout_below="@+id/txtProductPrice"
                />
            <TextView
                android:id="@+id/txtProductSellCount"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:text="400 Terjual"
                android:layout_toRightOf="@+id/divider1"
                android:layout_below="@+id/txtProductPrice"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/txtProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description here"
                android:layout_below="@+id/imgProductRateStar"
                android:textSize="16dp"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>